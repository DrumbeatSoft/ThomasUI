<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.TipsActivity">

    <com.thomas.ui.ThomasTitleBar
        android:id="@+id/thomasTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomShadowHeight="4dp"
        app:centerText="ThomasDialog示例"
        app:centerTextColor="@color/thomasTitleTextColor"
        app:centerType="textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftType="imageButton"
        app:rightText="切换"
        app:rightType="textView"
        app:showBottomLine="true"
        app:statusBarMode="dark" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thomasTitleBar" />
</androidx.constraintlayout.widget.ConstraintLayout>