<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ListView Start -->
    <style name="ListView.Compat" parent="@style/Widget.AppCompat.ListView">
        <item name="android:background">@color/thomas_config_color_transparent</item>
        <item name="android:listSelector">@color/thomas_config_color_transparent</item>
        <item name="android:divider">@drawable/thomas_divider_bottom_bitmap</item>
        <item name="android:dividerHeight">@dimen/thomas_divider_height</item>
    </style>
    <!-- ListView End -->

    <!-- GridView -->
    <style name="GridView.Compat" parent="android:Widget.GridView">
        <item name="android:background">@color/thomas_config_color_transparent</item>
        <item name="android:listSelector">@color/thomas_config_color_transparent</item>
    </style>

    <style name="ImageButton.Compat" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@color/thomas_config_color_transparent</item>
    </style>

    <style name="Button.Compat" parent="@style/Widget.AppCompat.Button">
        <!-- 取消 Button 字符默认大写的功能（会导致 Spannable 失效），默认值只影响 5.0 以上版本，但使用Compat包后，4.x 版本也会受到影响 -->
        <!-- http://stackoverflow.com/questions/29007746/button-settext-with-spannable-dosent-work-for-android-5-0-lollipop -->
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="EditText.Compat" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/thomas_config_color_gray_1</item>
        <item name="android:textColorHint">@color/thomas_config_color_gray_4</item>
        <!-- 光标颜色与textColor一致，若要自定义，应该用ShapeDrawable，不能简单指定一个color -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="TextView.Compat" parent="android:Widget.TextView">
        <!--        <item name="android:textAppearance">@style/ThomasTextAppearance</item>-->
        <!--        &lt;!&ndash; textColorHighlight 放在appearance中无效，好像TextView总是默认存在一个textColorHighlight-->
        <!--             会覆盖掉它，并不知道原因 &ndash;&gt;-->
        <!--        <item name="android:textColorHighlight">?attr/qmui_skin_support_color_background_pressed</item>-->
    </style>

    <style name="AutoCompleteTextView.Compat" parent="@style/Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/thomas_config_color_gray_1</item>
        <item name="android:textColorHint">@color/thomas_config_color_gray_4</item>
        <!-- 光标颜色与textColor一致，若要自定义，应该用ShapeDrawable，不能简单指定一个color -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- 下拉列表，例如AutoCompleteTextView的补全列表 -->
    <style name="DropDownListView.Compat" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/thomas_divider_bottom_bitmap</item>
        <item name="android:dividerHeight">@dimen/thomas_divider_height</item>
        <item name="android:background">@color/thomas_config_color_white</item>
    </style>

</resources>