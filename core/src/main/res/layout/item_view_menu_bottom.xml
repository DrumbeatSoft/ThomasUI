<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/thomas_r8_selector"
    android:padding="@dimen/thomasNormalPadding"
    tools:ignore="RtlCompat">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thomas_iv_item_res"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/thomasSmallPadding"
        android:layout_marginEnd="@dimen/thomasNormalPadding" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/thomas_tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/thomas_iv_item_res"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/thomasContentSize"
        tools:text="选项一" />
</RelativeLayout>