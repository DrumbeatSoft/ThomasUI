<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/thomas_config_color_white"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thomas_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:maxLines="1"
            android:paddingStart="@dimen/thomasLargePadding"
            android:paddingTop="@dimen/thomasSmallPadding"
            android:paddingEnd="@dimen/thomasLargePadding"
            android:paddingBottom="@dimen/thomasSmallPadding"
            android:textColor="@color/thomasButtonTextColor"
            android:textSize="@dimen/thomasButtonSize"
            tools:text="取消" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thomas_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/thomasTitleTextColor"
            android:textSize="@dimen/thomasTitleSize"
            tools:text="标题" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thomas_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="@dimen/thomasLargePadding"
            android:paddingTop="@dimen/thomasSmallPadding"
            android:paddingEnd="@dimen/thomasLargePadding"
            android:paddingBottom="@dimen/thomasSmallPadding"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/thomasButtonTextColor"
            android:textSize="@dimen/thomasButtonSize"
            tools:text="确定" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/thomasSmallPadding"
        android:orientation="horizontal">

        <com.thomas.ui.date.WheelView
            android:id="@+id/mpvDialogYear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="RtlSymmetry" />

        <com.thomas.ui.date.WheelView
            android:id="@+id/mpvDialogMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.thomas.ui.date.WheelView
            android:id="@+id/mpvDialogDay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>